<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.loader.liteplayer.fragment">

    <ImageButton
        android:id="@+id/imagebtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/head2"/>

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="按钮1"
        android:textSize="50sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imagebtn"
        android:background="@drawable/recordimg"/>
    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="按钮2"
        android:textSize="50sp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imagebtn"
        android:background="@drawable/vipimg"/>

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="按钮3"
        android:textSize="50sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btn1"
        android:background="@drawable/recordlist"/>
    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="按钮4"
        android:textSize="50sp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btn2"
        android:background="@drawable/cloud_i_like"/>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="360dp"
        android:layout_height="180dp"

        android:layout_marginTop="53dp"
        android:background="@drawable/background1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
